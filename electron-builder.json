{
  "appId": "com.nemi.padma",
  "productName": "PADMA",
  "copyright": "Copyright Â© 2025 Nemi Inc",
  "directories": {
    "output": "build",
    "buildResources": "msix/assets"
  },
  "files": [
    "dist/**/*",
    "index.html",
    "src/assets/**/*",
    "src/styles/**/*",
    "node_modules/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "src/scripts",
      "to": "scripts",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "src/assets/app.ico",
    "signAndEditExecutable": false
  },
  "appx": {
    "applicationId": "Nemi.PADMA",
    "identityName": "Nemi.PADMA",
    "publisher": "CN=Nemi-Inc",
    "publisherDisplayName": "Nemi Inc",
    "displayName": "PADMA",
    "backgroundColor": "#E6F2FF",
    "showNameOnTiles": true,
    "languages": ["en-US"]
  }
}
