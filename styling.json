{
  "fonts": {
    "primary": "'Segoe UI', 'Atkinson Hyperlegible', system-ui, -apple-system, sans-serif"
  },
  "colors": {
    "text": {
      "primary": "#1a365d",
      "secondary": "#4a5568",
      "muted": "#718096",
      "light": "#a0aec0",
      "white": "#ffffff"
    },
    "background": {
      "main": "linear-gradient(135deg, #e0f2fe 0%, #f0f9ff 50%, #ffffff 100%)",
      "glass": "rgba(255, 255, 255, 0.7)",
      "glassHover": "rgba(255, 255, 255, 0.85)",
      "card": "rgba(255, 255, 255, 0.6)",
      "cardHover": "rgba(255, 255, 255, 0.8)",
      "sidebar": "rgba(255, 255, 255, 0.5)",
      "titlebar": "rgba(230, 242, 255, 0.9)"
    },
    "accent": {
      "primary": "#5a7fa8",
      "primaryHover": "#4a6b8f",
      "secondary": "#7c9fc2",
      "success": "#48bb78",
      "warning": "#ed8936",
      "danger": "#f56565",
      "info": "#4299e1"
    },
    "border": {
      "light": "rgba(255, 255, 255, 0.3)",
      "glass": "rgba(255, 255, 255, 0.5)",
      "subtle": "rgba(0, 0, 0, 0.05)"
    },
    "shadow": {
      "glass": "0 8px 32px rgba(31, 38, 135, 0.1)",
      "card": "0 4px 16px rgba(31, 38, 135, 0.08)",
      "button": "0 4px 12px rgba(90, 127, 168, 0.3)",
      "soft": "0 2px 8px rgba(0, 0, 0, 0.05)"
    },
    "scrollbar": {
      "track": "rgba(0, 0, 0, 0.05)",
      "thumb": "rgba(90, 127, 168, 0.3)",
      "thumbHover": "rgba(90, 127, 168, 0.5)"
    }
  },
  "dimensions": {
    "sidebar": {
      "width": "280px",
      "minWidth": "280px",
      "collapsedWidth": "80px"
    },
    "titlebar": {
      "height": "48px"
    },
    "card": {
      "borderRadius": "20px",
      "minHeight": "120px"
    },
    "button": {
      "height": "44px",
      "borderRadius": "12px"
    },
    "scrollbar": {
      "width": "8px"
    }
  },
  "typography": {
    "heading": {
      "fontWeight": "700",
      "h1": "2.5rem",
      "h2": "1.75rem",
      "h3": "1.25rem"
    },
    "body": {
      "fontSize": "1rem",
      "lineHeight": "1.6"
    },
    "small": {
      "fontSize": "0.875rem"
    }
  },
  "spacing": {
    "container": {
      "padding": "24px"
    },
    "card": {
      "padding": "24px",
      "gap": "16px"
    },
    "grid": {
      "gap": "20px"
    }
  },
  "effects": {
    "blur": {
      "glass": "16px",
      "heavy": "24px"
    },
    "transitions": {
      "default": "all 0.3s cubic-bezier(0.4, 0, 0.2, 1)",
      "fast": "all 0.15s ease",
      "smooth": "all 0.4s ease-out"
    }
  },
  "states": {
    "hover": {
      "transform": "translateY(-2px)",
      "scale": "1.02"
    },
    "active": {
      "transform": "translateY(0)",
      "scale": "0.98"
    }
  }
}
