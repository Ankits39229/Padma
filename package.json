{
  "name": "padma",
  "version": "1.0.0",
  "description": "PADMA - System Purifier & Optimizer - A premium Windows system optimization and purity suite",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc -p tsconfig.main.json && tsc -p tsconfig.renderer.json",
    "start": "npm run build && electron .",
    "dev": "tsc && electron . --dev",
    "watch": "tsc --watch",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:msix": "npm run build && electron-builder --win appx"
  },
  "keywords": [
    "electron",
    "desktop-app",
    "system-optimizer",
    "windows-cleaner",
    "padma"
  ],
  "author": "Nemi Inc",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "systeminformation": "^5.21.0"
  }
}
